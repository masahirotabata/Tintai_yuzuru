<div class="cover-follower-index">
  <div class="container">
    <div class="row justify-content-center">
      <h1 class="font-weight-normal mt-5 mb-5">フォロワー一覧</h1>
    </div>
      <div class="row justify-content-center">
        <% @followers.each do |follower| %>
          <div class="one-post card w-100">
            <%= link_to public_customer_path(follower) do %>
              <p class="caption h4"><%= follower.last_name %> <%= follower.first_name %></p>
                <div class="d-flex">
                  <tr><%= attachment_image_tag(@follower_tag, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>
                  <h4 class="ml-5"><%#= follower.profile_image %></h4>
                </div>
              <p class="caption"><%#= "#{follower.post_comments.count} 投稿" %></p>
            <% end %>
          </div>
        <% end %>
    </div>
  </div>
</div>