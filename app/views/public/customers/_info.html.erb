<div class="col-md-4">
  <div class="card mb-4 shadow-sm">
  <tr><%= attachment_image_tag(@customer_tag,  :real_estates_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>
    <div class="card-body">
    <p class="card-text"><table class='table'>
    <tr>
	  <th>名前</th>
	  <th><%= @customer.last_name %></th>
	  <th>職業</th>
	  <th><%= @customer.jobs %></th>
	  <th>引っ越しの真剣度合い</th>
	  <th><%= @customer.seriousness %></th>
    </tr>
    </table>
    <div class='row'>
    <%#= link_to ''edit_customer_registration_path_path(@customer.id),class: "btn btn-outline-secondary btn-block fas fa-customer-cog edit_customer_#{@customer.id}" %>
    </div>
    <tbody>
    <% if @customer %>
    フォロー数: <%=link_to(@customer.following.count,public_customer_relationship_followings_path(relationship_id: @customer, customer_id: @customer)) %>
    フォロワー数: <%= link_to(@customer.followers.count,public_customer_relationship_followers_path(relationship_id: @customer, customer_id: @customer))  %>
    <% end %>
    </tbody></p>
    <div class="d-flex justify-content-between align-items-center">
    <div class="btn-group">
    <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "Edit", edit_public_customer_path(@customer) %></button>
    </div>
    <small class="text-muted">9 mins</small>
    </div>
    </div>
  </div>
</div>


