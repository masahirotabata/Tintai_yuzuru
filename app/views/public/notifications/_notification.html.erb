<div class = "container">

<div class = "row">
<% notifications.each do |notification| %>
<%= notification.visitor %>
<% visiter = Customer.find(notification.visiter_id) %>
<%# visited = notification.visited %>
<div class="col-md-6.mx-auto">
  <!--.form-inline -->
    <span>
      <%= link_to public_customer_path(visiter) do %>
      <%= attachment_image_tag(@customer_tag,  :real_estates_image, :fill, 100, 100, fallback: "no_image.jpg") %>
        <strong>
         <%= visiter.last_name %>さんが
        </strong>
        <% end %>
      <% case notification.action %>
      <% when 'follow' then %>
      あなたをフォローしました
      <% when 'like' then %>
        <%= link_to 'あなたの投稿', notification.post, style: "font-weight: bold;" %>にいいねしました
       <% end %>
       <% end %>

 <!-- .small.text-muted.text-right
    = time_ago_in_words(notification.created_at).upcase
  hr -->
  </div>
  </div>