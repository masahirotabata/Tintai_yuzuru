<div class = "contents">
    <div class='row'>
        <div class='col-md-9 offset-md-1'>
            <%= render "shared/flash_message" %>
            <h4>交渉物件カート</h4>
            <table border ="1" >
              <tr>
                <th>賃貸物件名</th>
                <th>譲渡価格（税込）</th>
              </tr>
                <% if @customer_cart_real_estates.exists? %>
                        <% @customer_cart_real_estates.each do |cart_real_estate| %> 
                            <% if cart_real_estate.real_estate.present? %>
                              <tr>
                                <%= link_to public_cart_real_estate_path(cart_real_estate.real_estate_id) do %>
                                  <td> 
                                    <%= cart_real_estate.real_estate.real_estate_name %>
                                  </td>
                                  <td> 
                                    <%= cart_real_estate.real_estate.offer_price %>
                                  </td>
                                  <td>
                                    <%= link_to "削除する", public_cart_real_estate_path(cart_real_estate), method: :delete, class: "btn", style: "background-color:#ecc4d4; color: red;" %>
                                  </td>
                                  <td>
                                     <%= link_to "情報入力画面に進む", public_new_order_path(cart_real_estate), class: "btn", style: "background-color: #5cb85c; color: white;" %>
                                  </td>
                                <% end %>
                              </tr>
                        <% end %>
                    <% end %>
                  <%= link_to "交渉物件カートを空にする", public_cart_real_estates_destroy_all_public_cart_real_estates_path, method: :delete, class: "btn", style: "background-color: #b4d4d4; color: white;" %>
                  <%= link_to "賃貸物件交渉を続ける", public_customer_relationship_matchers_path(customer_id: current_customer, relationship_id: current_customer), class: "btn", style: "background-color: #6599cc; color: white;" %>
              <% else %>    
                <p>現在、カート内に交渉物件は入っていません</p>
              <% end %>
            </table>
        </div>
    </div>
</div>
   