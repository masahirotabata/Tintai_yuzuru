<div class="cover-following-index">
  <div class="container">
    <div class="row justify-content-center">
      <h1 class="font-weight-normal mt-5 mb-5">フォロー一覧</h1>
    </div>
    <div class="row justify-content-center">
      <% @followings.each do |following| %>
      <div class="one-post card w-100">
        <%= link_to public_customer_path(following) do %>
        <p class="caption h4"><%= following.last_name %></p>
        <div class="d-flex">
          <tr><%= attachment_image_tag(@following_tag, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>
          <h4 class="ml-5"><%#= following.profile_image %></h4>
        </div>
        <p class="caption"><%#= "#{following.post_comments.count} 投稿" %></p>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>