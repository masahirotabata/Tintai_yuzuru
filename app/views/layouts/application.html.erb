<!DOCTYPE html>
<html>
  <head>
    <title>Tintaiyuzuru</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if controller.class.parent.name == "Admin" %>
      <%= render "admin/shared/header" %>
    <% else %>
      <%= render "public/shared/header" %>
    <% end %>
    
    <% if signed_in? && unchecked_notifications.any?  %>
      <i class="fa fa-circle" style="color: gold;"></i>
    <% end %>
    
   
    
    <%= yield %>
  </body>
    
    <footer class="mt-4">
     <%= render "shared/footer" %>
    </footer>
    
</html>
